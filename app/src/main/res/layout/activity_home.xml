<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluehd"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <EditText
        android:textColorHint="#000000"
        android:id="@+id/etService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlId"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/border"
        android:fontFamily="monospace"
        android:hint="Service Provider"
        android:lines="1"
        android:maxLength="10"
        android:textSize="20dp" />


    <EditText
        android:textColorHint="#000000"
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlId"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/border"
        android:fontFamily="monospace"
        android:hint="Username/Email"
        android:lines="1"
        android:maxLength="10"
        android:textSize="20dp" />


    <EditText
        android:textColorHint="#000000"
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlId"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/border"
        android:fontFamily="monospace"
        android:hint="Passowrd"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="10"
        android:textSize="20dp" />
    <Button
        android:background="#5a9ae7"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:textColorHighlight="#5a9ae7"

        android:text="Store"
android:onClick="sendData"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/etPassword"
        />

</LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:divider="#190678"
        android:dividerHeight="0.5sp"
        android:id="@+id/lvData"
        >


    </ListView>


</LinearLayout>